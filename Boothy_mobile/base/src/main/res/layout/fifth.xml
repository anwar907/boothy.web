<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-20dp"
        android:src="@drawable/hint" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:tag="1"
        android:textColor="#000"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/subtitle"
        android:text="TIPS"
        android:textSize="54sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/subtitle"
        android:gravity="center"
        android:layout_above="@id/img"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:tag="2"
        android:textColor="#777"
        android:paddingTop="15dp"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:layout_marginBottom="15dp"
        android:text="Untuk HP android seri Marshmallow ke atas, anda tidak perlu mgnginstall apa-apa. Jangan lupa untuk mengaktifkan fitur Instant App di Playstore anda.\n\nGunakan Google Lens untuk scan QR Code, aplikasi akan otomatis terbuka. atau anda bisa menggunakan aplikasi QR Code scanner bawaan dari HP anda"
        android:textSize="18sp" />

    <TextView
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:textSize="10dp"
        android:layout_margin="5dp"
        android:text="Â© 2019 - hayi.nkm@gmail.com"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>